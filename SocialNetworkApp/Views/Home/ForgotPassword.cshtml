@model SocialNetworkApp.Core.Application.ViewModels.Users.ForgotPasswordViewModel

@{
    ViewData["Title"] = "recuperacion de contraseña";
}

<div class="container-fluid ">
    <div class="row">
        <div class="col-4 offset-4">
            <div class="card">
                <div class="card-header bg-black text-light">
                    <h4>Recuperar contraseña</h4>

                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Home" asp-action="ForgotPassword">

                        @if (!ViewData.ModelState.IsValid)
                        {
                            @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
                        }

                        <div class="mb-2">
                            <label asp-for="Username" class="form-label">Nombre de usuario: </label>
                            <input asp-for="Username" class="form-control" placeholder="Ingrese el nombre de usuario" />

                        </div>

                        <div class="mb-2">
                            <label asp-for="NewPassword" class="form-label">Nueva Contraseña: </label>
                            <input asp-for="NewPassword" class="form-control" placeholder="Ingrese la contraseña" />

                        </div>

                        <div class="mb-2">
                            <label asp-for="ConfirmNewPassword" class="form-label">Confirme la nueva contraseña: </label>
                            <input asp-for="ConfirmNewPassword" class="form-control" placeholder="Ingrese la contraseña nuevamente" />

                        </div>


                        <div class="mt-4 text-center">

                            <div class="mt-4">
                                <button type="submit" class="btn btn-primary">Guardar</button>
                                <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Volver</a>

                            </div>
                        </div>

                    </form>
                </div>

            </div>

        </div>
    </div>


</div>




