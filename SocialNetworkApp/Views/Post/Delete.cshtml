@model SocialNetworkApp.Core.Application.ViewModels.Posts.SavePostViewModel

@{

    ViewData["Title"] = "Eliminar Post";

}
<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-black text-light">
                    <h4>Esta Seguro de eliminar esta publicacion:</h4>

                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Post" asp-action="Delete">
                        
                        @if (Model.TypePost == "TextPost")
                        {
                            <div class="mb-2">
                                <label asp-for="Text" class="form-label">Nombre: </label>
                                <input asp-for="Text" type="text" class="form-control" readonly />
                            </div>
                            <input type="hidden" asp-for="TypePost" />

                        }

                        @if (Model.TypePost == "VideoPost")
                        {
                            <div class="mb-2">
                                <iframe width="100%" height="500px" src="@Model.VideoUrl" title="Video subido" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
                            </div>
                            <input type="hidden" asp-for="TypePost" />
                        }

                        @if (Model.TypePost == "ImagePost")
                        {
                            <div class="mb-2">
                                <img class="card-img w-100" src="@Model.ImgUrl" alt="Post">
                            </div>
                            <input type="hidden" asp-for="TypePost"/>
                        }
                        

                        <input type="hidden" asp-for="Id" name="id"/>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                            <a asp-controller="Home" asp-action="HomePage" class="btn btn-warning">Volver</a>


                        </div>

                    </form>
                </div>

            </div>

        </div>
    </div>
</div>