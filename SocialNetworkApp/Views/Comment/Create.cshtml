@model SocialNetworkApp.Core.Application.ViewModels.Comments.SaveCommentViewModel

@{
    ViewData["Title"] = "Comentar";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-black text-light">
                    <h4>Crear comentario</h4>

                </div>
                <div class="card-body">
                    <form method="post"  asp-controller="Comment" asp-action="Create">

                        
                        <div class="mb-2">
                            <label asp-for="Text" class="form-label">Contenido del comentario: </label>
                            <textarea asp-for="Text" class="form-control" placeholder="ingrese el texto del comentario"></textarea>
                            <span asp-validation-for="Text" class="text-danger"></span>
                        </div>

                        <input type="hidden" asp-for="PostId" />

                        <input type="hidden" asp-for="Id" />

                        <input type="hidden" asp-for="RedirectTo"/>


                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary">Comentar</button>
                            @if(Model.RedirectTo == "Friends")
                            {
                                <a asp-controller="Friend" asp-action="Index"  class="btn btn-warning">Volver</a>
                            }
                            else
                            {
                                <a asp-controller="Home" asp-action="HomePage" class="btn btn-warning">Volver</a>
                            }
                            

                        </div>


                    </form>
                </div>

            </div>

        </div>
    </div>


</div>

